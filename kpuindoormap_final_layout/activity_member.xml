<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login"
    >

    <TextView
        android:id="@+id/logintitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="회원가입"
        android:gravity="center"
        android:textSize="40dp"
        />

    <EditText
        android:id="@+id/membertext1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="151dp"
        android:hint="이름">
    <requestFocus/>
        </EditText>

    <EditText
        android:id="@+id/membertext2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="201dp"
        android:hint="아이디">
    <requestFocus/>
        </EditText>

    <EditText
        android:id="@+id/membertext3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:password="true"
        android:layout_below="@+id/membertext2"
        android:hint="비밀번호">

        <requestFocus/>
    </EditText>

    <EditText
        android:id="@+id/membertext4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:password="true"
        android:layout_below="@+id/membertext3"
        android:hint="비밀번호 확인">

     <requestFocus/>
    </EditText>

    <Button
        android:id="@+id/memberb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/membertext2"
        android:layout_toRightOf="@+id/membertext2"
        android:text="중복확인"
        />

    <Button
        android:id="@+id/memberb2"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_below="@+id/membertext4"
        android:layout_marginLeft="80dp"
        android:onClick="insert"
        android:text="가입하기"
        />

    <Button
        android:id="@+id/memberb3"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/memberb2"
        android:layout_toRightOf="@+id/memberb2"
        android:text="취소"
        />

</RelativeLayout>